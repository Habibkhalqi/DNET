@page
@model MyRegistrationFrom.Pages.ShowStudent

<div class="row justify-content-center">
    <div class="col-12">
        <table class="table" >
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">FatherName</th>
                <th scope="col">Cnic</th>
                <th scope="col">Phone</th>
                <th scope="col">Class</th>
                <th scope="col">Session</th>
                <th scope="col">Semester</th>
                <th colspan="2">Action</th>
            </tr>
            </thead>
            <tbody class="table-group-divider">
            @foreach (var item in Model.std)
            {
                <tr>
                    <th scope="row">@item.id</th>
                    <td>@item.name</td>
                    <td>@item.FatherName</td>
                    <td>@item.CNIC</td>
                    <td>@item.phone</td>
                    <td>@item.Class</td>
                    <td>@item.Session</td>
                    <td>@item.semester</td>
                    <td>
                        <a class="btn btn-primary" asp-route-id="@item.id" asp-page="UpdateStudent" >Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-route-id="@item.id" asp-page-handler="Delete">Delete</a>
                    </td>
                </tr>
            }
          

            </tbody>
        </table>
    </div>
</div>